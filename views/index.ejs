<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GOT characters</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/styles.css">
    <link href="https://fonts.cdnfonts.com/css/trajan-pro" rel="stylesheet">
</head>
<body>
  <div class="menu">
    <h1>Game of Thrones Characters</h1>
    <form action="/search" id="search" method="POST">
      <label for="searchInput" class="srchChar">Search Character:</label>
      <input type="text" id="searchInput" name="name">
      <input id="get" type="submit" class="button">
    </form>
    <a href="/random" class="button">Random</a>
    <div class="searchList">
      <%if (locals.listOfMatches){%>
        <%if (listOfMatches.length > 0){%>
      <ul>
        <% listOfMatches.forEach(name => { %>
          <li><a href="/byName?name=<%= encodeURIComponent(name) %>"><%= name %></a></li>
        <% }); %>
      </ul>
      <% } else { %>
        <p>No characters found.</p>
        <% } %>
    <% } %>
    </div>
  </div>
</body>
</html>